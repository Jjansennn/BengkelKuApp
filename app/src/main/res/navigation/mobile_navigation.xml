    <fragment
        android:id="@+id/navigation_status"
        android:name="com.example.bengkelkuapp.ui.StatusFragment"
        android:label="@string/title_status"
        tools:layout="@layout/fragment_status" />

    <fragment
        android:id="@+id/navigation_profile"
