<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <!-- Welcome Text -->
            <LinearLayout
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:text="Welcome,"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Jansen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F5A623"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_find_and_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/find_and_book"
                    android:textSize="14sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:src="@drawable/notificon"
                app:layout_constraintEnd_toStartOf="@id/ic_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/navbarprofile"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Trusted Workshop Text -->
        <TextView
            android:id="@+id/text_trusted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Search and Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Search"
                android:drawableStart="@drawable/search"
                android:background="@drawable/edittext_rounded_bg" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logofilter"
                android:background="@drawable/btn_orange_rounded" />
        </LinearLayout>

        <!-- Repair Card -->
        <include layout="@layout/layout_repair_card" />

        <!-- Garage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Garage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <include layout="@layout/item_garage_card" />

        <!-- Mechanics Map -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mechanics Near You"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/map" />

        <!-- Tips & Tricks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tips and Tricks"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/tips1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_rounded" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_card_rounded"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tips2" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:src="@drawable/tips3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_rounded" />
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>
</ScrollView>
